<odoo>
    <data>
        <record model="ir.ui.view" id="sale_form_inherit">
            <field name="name">inherit form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="today_date"/>
                    <field name="birth_date"/>
                    <field name="age"/>
                    <field name="count"/>
                    <button name="%(task_wiz_window)d" string="Link" type="action" class="btn-success"/>
                    <button name="r" string="Read" type="object" class="btn-success"/>
                </field>
            </field>
        </record>
    </data>
</odoo>

