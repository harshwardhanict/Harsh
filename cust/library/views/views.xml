<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="library_list">
            <field name="name">Library list</field>
            <field name="model">library.library</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="image" widget="image"/>
                    <field name="stat"/>
                </tree>
            </field>
        </record>

         <record id="view_res_company_kanban" model="ir.ui.view">
            <field name="name">custom1.custom1.kanban</field>
            <field name="model">custom1.custom1</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" widget='email' placeholder='email'/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            fname:
                                            <field name="fname" placeholder='fname'/>
                                        </li>
                                        <li>
                                            lname:
                                            <field name="lname" placeholder='lname'/>
                                        </li>
                                        <li>
                                            mobile:
                                            <field name="mobile"/>
                                        </li>
                                        <li>
                                            addres:
                                            <field name="address"/>
                                        </li>
                                        <li>
                                            city:
                                            <field name="city"/>
                                        </li>
                                        <li>
                                            image:
                                            <field name='image' widget='image'/>
                                        </li>

                                    </ul>
                                </div>

                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="library_form">
            <field name="name">Library form</field>
            <field name="model">library.library</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stat" widget="statusbar" options="{'clickable':'2'}"
                               statusbar_visible="application,confirm"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="value"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="library_action_window">
            <field name="name">Library window</field>
            <field name="res_model">library.library</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->

        <record model="ir.actions.server" id="library_action_server">
            <field name="name">Library server</field>
            <field name="model_id" ref="model_library_library"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>

        <!-- Top menu item -->

        <menuitem name="Library" id="library_menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="library_menu_1" parent="library_menu_root"/>
        <menuitem name="Menu 2" id="library_menu_2" parent="library_menu_root"/>

        <!-- actions -->

        <menuitem name="List" id="library_menu_1_list" parent="library_menu_1"
                  action="library_action_window"/>
        <menuitem name="Server to list" id="library" parent="library_menu_2"
                  action="library_action_server"/>

    </data>
</odoo>