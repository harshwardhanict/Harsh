<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="avish_list">
      <field name="name">avish list</field>
      <field name="model">avish.avish</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" placeholder="Name"/>
          <field name="PhoneNo"/>
          <field name="Price"/>
          <field name="Email" widget="email"/>
          <field name="Gender" widget="radio"/>
          <field name="Profile" widget ="image"/>
        </tree>
      </field>
    </record>

<!--    <record model="ir.ui.view" id="avish_form">-->
