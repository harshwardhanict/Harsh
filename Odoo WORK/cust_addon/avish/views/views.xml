<!--          <field name="Price"/>-->
<!--         </group>-->

<!--          <group>-->
<!--            <field name="Email" widget="email"/>-->
<!--            <field name="Gender" />-->
<!--            <field name="Profile" widget ="image"/>-->
<!--          </group>-->


      <record id="avish_form" model="ir.ui.view"  >
            <field name="name">avish form</field>
            <field name="model">avish.avish</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                        <field name="PhoneNo"/>
                        <field name="Gender" widget="radio" options="{'horizontal':true}" />
                    </sheet>
                </form>
            </field>
      </record>





    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="avish_action_window">
      <field name="name">avish window</field>
      <field name="res_model">avish.avish</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="avish_action_server">
      <field name="name">avish server</field>
      <field name="model_id" ref="model_avish_avish"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="avish" id="avish_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="avish_menu_1" parent="avish_menu_root"/>
    <menuitem name="Menu 2" id="avish_menu_2" parent="avish_menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="avish_menu_1_list" parent="avish_menu_1"
              action="avish_action_window"/>
    <menuitem name="Server to list" id="avish_1" parent="avish_menu_2"
              action="avish_action_server"/>
    <menuitem name="war" id="avish_wizard_1" parent="avish_menu_2"
              action="avish_wizard_action_window"/>


  </data>
</odoo>
